<h2>Search Descriptions</h2>

<form action="/descriptions" method="GET">
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>

<br>
<% descriptions.forEach(description => { %>
    <div><%= description.name %></div>
<% }); %>